<% include _header %>

<div class="container">
  <h1 class='col-md-offset-1'>Edit User</h1>
  <hr><br>
  <form action="/edit" method="post"  class='form-horizontal'>

    <div class="form-group">
      <label for="name" class='col-md-2 control-label'>Name</label>
      <div class="col-md-10">
        <input name="name" type="text" class="form-control" placeholder="Display name" value=<%= currentUser.name || "" %> autofocus>
      </div>
    </div>

    <div class="form-group">
      <label for="email" class='col-md-2 control-label'>E-mail</label>
      <div class="col-md-10">
        <input type="text" name="email" class="form-control" placeholder="E-mail address" value=<%= currentUser.email || ""%>>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-10 col-md-offset-2">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </div>

  </form>
</div>

<% include _footer %>
